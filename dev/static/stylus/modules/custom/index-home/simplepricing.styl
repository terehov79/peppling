.simplepricing
  width 100%
  height: 666px;
  position: relative;
  &--wrap
    width 100%
    background-color #00EAFF;
  h1.simple
    position absolute
    top -13px
    left 50%
    transform translateX(-50%)
  &__image
    width 100%
    display block
  &__img
    position absolute
    bottom 0
    left 0
    z-index: 2;
  &__form
    width 609px
    height 395px
    background: #FFFFFF;
    border-radius: 10px;
    padding 50px
    position absolute
    top 150px
    left 32%
    box-shadow: 0px 0px 44px -5px rgba(0,0,0,0.72);
    p
      font-weight: bold;
      font-size: 20px;
      line-height: 30px;
      letter-spacing: -0.111111px;
      color: #0E325B;
  &__price
    padding: 125px 0 0 150px;
    display flex
    flex-direction column
    justify-content: flex-start;
    align-items: flex-start;
    span
      font-weight: normal;
      font-size: 20px;
      line-height: 30px;
      letter-spacing: -0.111111px;
      color: #0E325B;
      mix-blend-mode: normal;
      opacity: 0.5;
      margin-bottom: 10px;
    span.price
      font-style: italic;
      font-weight: normal;
      font-size: 100px;
      line-height: 100px;
      letter-spacing: -0.444444px;
      color: #0E325B;
